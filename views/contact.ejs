        <div id="mySideNav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/">Home</a>
            <a href="/experience">Experience</a>
            <a href="/resume">Resume</a>
            <a href="/contact-me">Contact Me</a>
        </div>    
    </nav>
    <!-- END NAVBAR -->

    <!-- Title Section -->
    <div class="container d-none d-md-block">
        <div class="row mt-5">
            <div class="col p-5">
                <h1 class="display-1 text-center">Contact Me</h1>
                <h4 class="text-center">Fill out the form below to get in touch!</h4>
            </div>
        </div>
    </div>

    <div class="container d-md-none">
        <div class="row mt-5">
            <div class="col p-5">
                <h1 class="display-4 text-center">Contact Me</h1>
                <h4 class="text-center">Fill out the form below to get in touch!</h1>
            </div>
        </div>
    </div>

    <!-- End of title section-->

    <!-- Form Section -->
    <!-- Contact Us Form-->
    <div class="container mt-5 mb-5">
        <form id="contact_us_form">
            <div class="form-row justify-content-center">
                <div class="form-group col-md-8">
                    <label for="inputName">Name</label>
                    <input name="person_name" type="text" class="form-control" id="inputName" placeholder="Enter Name" required>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col-md-8">
                    <label for="inputPhone">Phone Number</label>
                    <input name="phone_number" type="tel" class="form-control" id="inputPhone" placeholder="Enter Phone Number">
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col-md-8">
                    <label for="InputEmail">Email Address</label>
                    <input name="email" type="email" class="form-control" id="InputEmail" placeholder="Enter email" required>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col-md-8">
                    <label for="subject">Subject</label>
                    <input name="email_subject" type="text" class="form-control" id="inputSubject" required>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col-md-8">
                    <label for="inputMessage">Message</label>
                    <textarea name="message" class="form-control" id="inputMessage" rows="3"></textarea>
                </div>
            </div>
                <div class="row justify-content-center">
                    <button type="submit" class="btn btn-lg btn-primary" id="form_submit_button">SUBMIT</button>
                </div>
        </form>
    </div>

    <!-- Spinner -->
    <div class="container d-none" id="spinnerItem">
        <div class="row justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only">Sending E-mail...</span>
            </div>
        </div>
    </div>
    <!-- End of Spinner -->


    <!-- E-mail Sent Successfully -->
    <div class="container d-none" id="email_submission_thank_you">
        <div class="row">
            <div class="col">
                <p class="lead text-center">Thanks for contacting me, I'll get back to you as soon as possible!</p>
            </div>
        </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/js/onPageEdits.js"></script>
    <script src="/js/email_submission.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
